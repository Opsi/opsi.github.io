---
interface Props {
  href: string;
  label: string;
}
const { href, label } = Astro.props;
const firstChar = label.charAt(0).toUpperCase();
const restChars = label.slice(1).toLowerCase();
---

<a
  href={href}
  class="group bg-deepest hover:bg-deeper rounded
  px-2 py-1
  text-whisper hover:scale-105 transition duration-150 ease-in-out"
>
  <span class="group-hover:text-primary">{firstChar}</span><span
    class="group-hover:text-ink">{restChars}</span
  >
</a>
