---
interface Props {
  name: string;
}
const { name } = Astro.props;
---

<div
  class="border-2 border-primary max-w-md w-full rounded-xl md:h-76 flex flex-col overflow-hidden shadow-neob-md sm:shadow-neob-xl shadow-black"
>
  <div class="flex items-center justify-between text-black bg-primary p-2">
    <h2 class="text-black text-2xl font-bold">{name}</h2>
    <div class="flex items-center gap-2">
      <slot name="icons" />
    </div>
  </div>
  <div class="flex justify-center font-mono grow flex-col bg-deepest p-2">
    <slot name="entries" />
  </div>
</div>
