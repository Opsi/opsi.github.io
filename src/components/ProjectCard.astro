---
interface Props {
  name: string;
  imageSrc: string;
  imageRight?: boolean;
}
const { name, imageSrc, imageRight = false } = Astro.props;
const firstChar = name.charAt(0).toUpperCase();
const restChars = name.slice(1).toLowerCase();
---

<div
  class=`
group grid grid-cols-3 overflow-hidden h-72
hover:bg-deep bg-deeper border-4 border-ink hover:border-primary shadow-neob-xl shadow-ink hover:shadow-primary
rounded-4xl
`
>
  {
    !imageRight && (
      <div class="col-span-1">
        <img
          src={imageSrc}
          class="object-cover size-full border-r-2 border-ink group-hover:border-primary"
          alt={`Project image of project ${name}`}
        />
      </div>
    )
  }
  <div class="col-span-2 p-4">
    <h3 class="text-4xl">
      <span class="group-hover:text-primary">{firstChar}</span>{restChars}
    </h3>
    <p><slot /></p>
  </div>
  {
    imageRight && (
      <div class="col-span-1">
        <img
          src={imageSrc}
          class="object-cover size-full border-l-2 border-ink group-hover:border-primary"
          alt={`Project image of project ${name}`}
        />
      </div>
    )
  }
</div>
